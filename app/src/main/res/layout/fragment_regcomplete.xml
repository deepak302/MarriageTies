<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mentobile.marriageties.FragmentRegComplete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/register_comp_img_upload"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/add_photo" />

        <TextView
            android:id="@+id/register_comp_tv_terms_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Touch to Select Picture from your Gallery" />

        <Button
            android:id="@+id/register_comp_btn_upload"
            style="@style/Button_Register"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Upload To Server" />

        <CheckBox
            android:id="@+id/register_comp_chkbox_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/string_terms_condition" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/register_comp_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>
